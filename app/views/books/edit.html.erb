<% if @book.errors.any? %>
  <div class="error_massage_color">
    <h3>
      <%= @book.errors.count %> errors prohibited this obj from being saved:
    </h3>
    <% @book.errors.full_messages.each do |message| %>
      <div class="error_container">
        <li class="error_massage_color"><%= message %></li>
      </div>
    <% end %>
  </div>
<% end %>

<h1>Editing Book</h1>

  <%= form_for(@book) do |f| %>
  <p><strong>Title</strong>
    <%= f.text_field :title, class: "book_title f_book" %></p>
  <p><strong>Opinion</strong>
    <%= f.text_area :body, class: "book_body f_book" %></p>
  <p><%= f.submit "Update Book", class: "btn btn-primary btn-block" %></p>
  <% end %>

<%= link_to "Show", book_path, class: "book_#{@book.id}" %>
