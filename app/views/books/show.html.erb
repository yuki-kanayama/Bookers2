<% if @book.errors.any? %>
  <div class="error_massage_color">
    <h3>
      <%= @book.errors.count %> errors prohibited this obj from being saved:
    </h3>
    <% @book.errors.full_messages.each do |message| %>
      <div class="error_container">
        <li class="error_massage_color"><%= message %></li>
      </div>
    <% end %>
  </div>
<% end %>

<!--グリッドシステム  -->
<div class="row">
  <!-- 左カラム -->
  <div class="col-xs-3">
     <%= render 'books/left_column', user: @user, book: @new %>
  </div>
  <!-- 左カラムここまで -->

  <!-- 右カラムここから -->
  <div class="col-xs-9">

    <div>
      <h2>Book detail</h2>
        <table class="table">
            <tr>
              <td><%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
                <p><%= link_to @user.name, user_path(@book.user.id), class: "user_#{@book.user.id}" %></p>
                </td>
              <td><%= link_to @book.title, book_path(@book.id), class: "book_#{@book.id}" %></td>
              <td><%= @book.body %></td>
                <% if @book.user == current_user %>
                  <td><%= link_to "Edit", edit_book_path(@book.id), class: "edit_book_#{@book.id} btn btn-success btn-sm btn_txt_color" %></td>
                  <td><%= link_to "Destroy", book_path(@book.id), class: "destroy_book_#{@book.id} btn btn-danger btn-sm btn_txt_color", method: :delete, data: {confirm: "本当に削除しますか？"} %></td>
                <% end %>
            </tr>
        </table>
    </div>

   <!-- 右カラムここまで -->
  </div>
</div>