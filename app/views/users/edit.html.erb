<% if @user.errors.any? %>
  <div class="error_massage_color">
    <h3>
      <%= @user.errors.count %> errors prohibited this obj from being saved:
    </h3>
    <% @user.errors.full_messages.each do |message| %>
      <div class="error_container">
        <li class="error_massage_color"><%= message %></li>
      </div>
    <% end %>
  </div>
<% end %>

<h1>User info</h1>

<%= form_for(@user) do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, placeholder:"名前", class: "name", id:"inputName" %>
  <p><label for="inputImage">Image</label>
  <%= f.attachment_field :profile_image, placeholder:"プロフィール画像", class:  "user_image", id:"inputImage" %></p>
  <label for="inputInfo">Introduction</label>
  <p><%= f.text_area :introduction, class: "introduction", id:"inputInfo" %></p>
  <p><%= f.submit "Update User" %></p>
 <% end %>