<% if @book.errors.any? %>
  <div class="error_massage_color">
    <h3>
      <%= @book.errors.count %> errors prohibited this obj from being saved:
    </h3>
    <% @book.errors.full_messages.each do |message| %>
      <div class="error_container">
        <li class="error_massage_color"><%= message %></li>
      </div>
    <% end %>
  </div>
<% end %>

<!--グリッドシステム  -->
<div class="row">
  <!-- 左カラム -->
  <div class="col-xs-3">
     <%= render 'books/left_column', user: @user, book: @book %>
  </div>
  <!-- 左カラムここまで -->

  <!-- 右カラムここから -->
  <div class="col-xs-9">

    <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <% @books.each do |book| %>
          <tr>
            <td>
            <%= link_to user_path(@user.id), class:   "user_#{@user.id}" do %>
              <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %>
            <% end %>
            </td>
            <td><%= link_to book.title, book_path(book.id), class: "book_#{book.id}" %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </table>

   <!-- 右カラムここまで -->
  </div>
</div>